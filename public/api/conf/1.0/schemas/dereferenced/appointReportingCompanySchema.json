{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Provides the ability to appoint a reporting company for the group",
    "type": "object",
    "properties": {
        "agentDetails": {
            "type": "object",
            "properties": {
                "agentActingOnBehalfOfCompany": {
                    "description": "Indicates if an Agency is acting on behalf of the Reporting Company for the group",
                    "type": "boolean"
                },
                "agentName": {
                    "description": "The name of the Agency that is acting on behalf of the company. Required if 'agentActingOnBehalfOfCompany' is 'true'",
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 160
                }
            },
            "required": [
                "agentActingOnBehalfOfCompany"
            ],
            "additionalProperties": false
        },
        "reportingCompany": {
            "description": "Details of the appointed reporting company that is submitting this return on behalf of the group",
            "type": "object",
            "properties": {
                "companyName": {
                    "description": "Name of the company",
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 160
                },
                "ctutr": {
                    "description": "Corporation Tax Unique Taxpayer Reference (CTUTR) number",
                    "type": "string",
                    "minLength": 10,
                    "maxLength": 10,
                    "pattern": "[0-9]{10}"
                },
                "sameAsUltimateParent": {
                    "description": "Indicate whether the reporting company is the same as the ultimate parent",
                    "type": "boolean"
                }
            },
            "required": [
                "companyName",
                "ctutr",
                "sameAsUltimateParent"
            ],
            "additionalProperties": false
        },
        "authorisingCompanies": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "companyName": {
                        "description": "Name of the company",
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 160
                    },
                    "ctutr": {
                        "description": "Corporation Tax Unique Taxpayer Reference (CTUTR) number",
                        "type": "string",
                        "minLength": 10,
                        "maxLength": 10,
                        "pattern": "[0-9]{10}"
                    },
                    "consenting": {
                        "description": "Has the company consented to this return",
                        "type": "boolean"
                    }
                },
                "required": [
                    "companyName",
                    "ctutr"
                ],
                "additionalProperties": false
            }
        },
