                                "properties": {
                                    "partnershipName": {
                                        "description": "Partnership name",
                                        "type": "string",
                                        "minLength": 1
                                    },
                                    "sautr": {
                                        "description": "Self-Assessment Unique Taxpayer Reference (SAUTR) number",
                                        "type": "string",
                                        "minLength": 10,
                                        "maxLength": 10,
                                        "pattern": "[0-9]{10}"
                                    }
                                },
                                "required": [
                                    "partnershipName"
                                ],
                                "additionalProperties": false
                            }
                        }
                    },
                    "required": [
                        "isElected"
                    ],
                    "additionalProperties": false
                }
