        "groupCompanyDetails": {
            "description": "Details about the group",
            "type": "object",
            "properties": {
                "totalCompanies": {
                    "description": "Total number of companies within the worldwide group",
                    "type": "integer",
                    "minimum": 1
                },
                "accountingPeriod": {
                    "description": "The worldwide groups accounting period",
                    "type": "object",
                    "properties": {
                        "startDate": {
                            "description": "The start date of the accounting period",
                            "type": "string",
                            "format": "date"
                        },
                        "endDate": {
