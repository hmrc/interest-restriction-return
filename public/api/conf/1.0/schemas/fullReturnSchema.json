{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "agentDetails": {
      "$ref": "subSchemas/agentDetails.json"
    },
    "reportingCompany": {
      "$ref": "subSchemas/reportingCompany.json"
    },
    "parentCompany": {
      "$ref": "subSchemas/parentCompany.json"
    },
    "publicInfrastructure": {
      "type": "boolean"
    },
    "groupCompanyDetails": {
      "$ref": "subSchemas/groupCompanyDetails.json"
    },
    "submissionType": {
      "type": "string",
      "enum": [
        "original",
        "revised"
      ]
    },
    "revisedReturnDetails": {
      "type": "string",
      "minLength": 1,
      "maxLength": 2000
    },
    "angie": {
      "type": "number",
      "minimum": 0
    },
    "returnContainsEstimates": {
      "type": "boolean"
    },
    "groupSubjectToInterestRestrictions": {
      "type": "boolean"
    },
    "groupSubjectToInterestReactivation": {
      "type": "boolean"
    },
    "revisedReturnDifferences": {
      "type": "string",
      "minLength": 1,
      "maxLength": 32767
    },
    "groupLevelElections": {
      "$ref": "subSchemas/groupLevelElections.json"
    },
    "ukCompanies": {
      "$ref": "subSchemas/ukCompanyFull.json"
    },
    "groupLevelAmount": {
      "$ref": "subSchemas/groupLevelAmount.json"
    },
    "adjustedGroupInterest": {
      "$ref": "subSchemas/adjustedGroupInterest.json"
    },
    "totalReactivation": {
      "type": "number",
      "minimum": 0
    }
  },
  "required": [
    "agentDetails",
    "reportingCompany",
    "publicInfrastructure",
    "groupCompanyDetails",
    "submissionType",
    "ukCompanies",
    "groupLevelAmount",
    "returnContainsEstimates",
    "groupSubjectToInterestRestrictions",
    "groupSubjectToInterestReactivation",
    "totalReactivation",
    "groupLevelElections"
  ],
  "additionalProperties": false
}