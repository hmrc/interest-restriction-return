{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Provides the ability to submit a full Interest Restriction Return (IRR) for the group",
  "type": "object",
  "properties": {
    "agentDetails": {
      "$ref": "subSchemas/agentDetails.json"
    },
    "reportingCompany": {
      "$ref": "subSchemas/reportingCompany.json"
    },
    "parentCompany": {
      "$ref": "subSchemas/parentCompany.json"
    },
    "publicInfrastructure": {
      "$ref": "definitions/definitions.json#/definitions/publicInfrastructure"
    },
    "groupCompanyDetails": {
      "$ref": "subSchemas/groupCompanyDetails.json"
    },
    "submissionType": {
      "$ref": "definitions/definitions.json#/definitions/submissionType"
    },
    "revisedReturnDetails": {
      "$ref": "definitions/definitions.json#/definitions/explanatoryNotesShort"
    },
    "angie": {
      "description": "Adjusted Net Group-Interest Expense (ANGIE) amount",
      "$ref": "definitions/definitions.json#/definitions/angie"
    },
    "returnContainsEstimates": {
      "description": "Indicator for whether the return contains figures which are estimated",
      "type": "boolean"
    },
    "groupEstimateReason": {
      "$ref": "definitions/definitions.json#/definitions/explanatoryNotesLong"
    },
    "companiesEstimateReason": {
      "$ref": "definitions/definitions.json#/definitions/explanatoryNotesLong"
    },
    "groupSubjectToInterestRestrictions": {
      "description": "Indicator for whether the group is subject to interest restrictions",
      "type": "boolean"
    },
    "groupSubjectToInterestReactivation": {
      "description": "Indicator for whether the group is subject to interest reactivations",
      "type": "boolean"
    },
    "revisedReturnDifferences": {
      "$ref": "definitions/definitions.json#/definitions/explanatoryNotesShort"
    },
    "groupLevelElections": {
      "$ref": "subSchemas/groupLevelElections.json"
    },
    "ukCompanies": {
      "$ref": "subSchemas/ukCompanyFull.json"
    },
    "groupLevelAmount": {
      "$ref": "subSchemas/groupLevelAmount.json"
    },
    "adjustedGroupInterest": {
      "$ref": "subSchemas/adjustedGroupInterest.json"
    },
    "totalReactivation": {
      "description": "Total of all allocated reactivations for each UK company",
      "type": "number",
      "minimum": 0,
      "multipleOf": 0.01
    },
    "totalRestrictions": {
      "description": "Total of all allocated restrictions for each UK company",
      "type": "number",
      "minimum": 0,
      "multipleOf": 0.01
    }
  },
  "required": [
    "agentDetails",
    "reportingCompany",
    "publicInfrastructure",
    "groupCompanyDetails",
    "submissionType",
    "ukCompanies",
    "groupLevelAmount",
    "returnContainsEstimates",
    "groupSubjectToInterestRestrictions",
    "groupSubjectToInterestReactivation",
    "totalReactivation",
    "totalRestrictions",
    "groupLevelElections"
  ]
}