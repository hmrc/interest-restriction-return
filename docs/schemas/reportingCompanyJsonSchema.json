{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "utr": {
      "type": "string",
      "minLength": 10,
      "maxLength": 10,
      "pattern": "[0-9]{10}"
    },
    "companyName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 160
    },
    "crn": {
      "type": "string",
      "minLength": 8,
      "maxLength": 8,
      "pattern": "[0-9]{8}|[A-z]{2}[0-9]{6}"
    }
  },
  "type": "object",
  "properties": {
    "agentActingOnBehalfOfCompany": {
      "type": "boolean"
    },
    "agentName": {
      "$ref": "#/definitions/companyName"
    },
    "reportingCompanyName": {
      "$ref": "#/definitions/companyName"
    },
    "utr": {
      "$ref": "#/definitions/utr"
    },
    "crn": {
      "$ref": "#/definitions/crn"
    },
    "authorisingCompanies": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "companyName": {
            "$ref": "#/definitions/companyName"
          },
          "utr": {
            "$ref": "#/definitions/utr"
          }
        },
        "required": [
          "companyName",
          "utr"
        ]
      }
    },
    "sameAsUltimateParent": {
      "type": "boolean"
    },
    "reportingCompanyDeemed": {
      "type": "boolean"
    }
  },
  "if": {
    "properties": {
      "agentActingOnBehalfOfCompany": {
        "const": true
      }
    }
  },
  "then": {
    "required": [
      "agentName"
    ]
  },
  "if": {
    "properties": {
      "reportingCompanyDeemed": {
        "const": true
      }
    }
  },
  "then": {
    "required": [
      "crn"
    ]
  },
  "confirmTrue": {
    "type": "boolean"
  },
  "required": [
    "agentActingOnBehalfOfCompany",
    "authorisingCompanies",
    "reportingCompanyName",
    "utr",
    "sameAsUltimateParent",
    "reportingCompanyDeemed",
    "confirmTrue"
  ],
  "dependencies": {
    "agentName": {
      "properties": {
        "agentActingOnBehalfOfCompany": {
          "const": true
        }
      }
    }
  }
}
